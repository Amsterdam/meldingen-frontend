{
  "name": "meldingen-frontend",
  "version": "0.0.0",
  "description": "Frontends for the Signalen applications",
  "author": "Gemeente Amsterdam",
  "license": "EUPL-1.2",
  "private": true,
  "engines": {
    "node": "^20",
    "pnpm": "^9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amsterdam/meldingen-frontend.git"
  },
  "scripts": {
    "build": "pnpm run /^build:/",
    "build:admin": "pnpm -F=admin build",
    "build:public": "pnpm -F=public build",
    "build:bo": "pnpm -F=back-office build",
    "dev": "pnpm run /^dev:/",
    "dev:admin": "pnpm -F=admin dev",
    "dev:public": "pnpm -F=public dev",
    "dev:bo": "pnpm -F=back-office dev",
    "generate-api-client": "openapi-ts",
    "lint": "eslint . && stylelint --allow-empty-input '**/*.{css,scss}' && npm run prettier && pnpm -r --no-bail type-check",
    "lint-fix": "eslint . --fix && stylelint --fix '**/*.{css,scss}' && npm run prettier-fix && pnpm -r --no-bail type-check",
    "prepare": "husky",
    "prettier": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "test": "pnpm -r --no-bail test",
    "test:watch": "pnpm -r --no-bail test:watch",
    "update-minor": "npm-check-updates --target minor --upgrade && pnpm install"
  },
  "dependencies": {
    "@amsterdam/design-system-assets": "0.3.0",
    "@amsterdam/design-system-css": "0.15.0",
    "@amsterdam/design-system-react": "0.15.0",
    "@amsterdam/design-system-react-icons": "0.1.14",
    "@amsterdam/design-system-tokens": "0.15.0",
    "@formio/react": "6.0.1",
    "formiojs": "4.21.6",
    "next-intl": "4.0.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.8",
    "@eslint/js": "9.24.0",
    "@eslint/json": "0.11.0",
    "@eslint/markdown": "6.3.0",
    "@hey-api/client-fetch": "0.10.0",
    "@hey-api/openapi-ts": "0.66.3",
    "@next/eslint-plugin-next": "15.3.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.14.1",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "3.1.1",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prefer-arrow-functions": "3.6.2",
    "eslint-plugin-react": "7.37.5",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "15.5.1",
    "msw": "2.7.4",
    "npm-check-updates": "17.1.18",
    "prettier": "3.5.3",
    "stylelint": "16.18.0",
    "stylelint-config-css-modules": "4.4.0",
    "stylelint-config-standard": "37.0.0",
    "stylelint-order": "6.0.4",
    "stylelint-value-no-unknown-custom-properties": "6.0.1",
    "tsc-files": "1.1.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.30.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.1"
  },
  "pnpm": {
    "overrides": {
      "webpack@>=5.0.0-alpha.0 <5.94.0": ">=5.94.0"
    }
  },
  "packageManager": "pnpm@9.15.3+sha256.c1da43727ccbc1ed42aff4fd6bdb4b1e91e65a818e6efff5b240fbf070ba4eaf"
}
